{
  // Build C++ with g++
  ``version``: "2.0.0",
  "tasks": [
    {
      "label": "build:debug",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "mkdir -p '${workspaceFolder}/build/Debug' && /usr/bin/g++ -std=c++17 -g -O0 -Wall -Wextra -o '${workspaceFolder}/build/Debug/tetris' '${workspaceFolder}/main.cpp'"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build:release",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "mkdir -p '${workspaceFolder}/build/Release' && /usr/bin/g++ -std=c++17 -O2 -Wall -Wextra -o '${workspaceFolder}/build/Release/tetris' '${workspaceFolder}/main.cpp'"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}

